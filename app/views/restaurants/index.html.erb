<h1>Restaurants</h1>

<%= link_to 'Add a new restaurant', new_restaurant_path %>

<div class="">
  <% @restaurants.each do |restaurant| %>
    <h2> <%= restaurant.name %> </h2>
    <p> <%= restaurant.address %> </p>
    <p> <%= restaurant.phone_number %> </p>
    <%= link_to 'Restaurant info', restaurant_path(restaurant) %>
  <% end %>
</div>
